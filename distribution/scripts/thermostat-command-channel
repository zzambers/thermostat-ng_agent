if [ "$#" -lt 3 ]; then
  echo "usage: $0 <hostname> <port> <ipcConfigFile>" >&2
  exit 1
fi
HOSTNAME="$1"
PORT="$2"
CONFIG_FILE="$3"

# Source thermostat-ipc-client-common from same directory as this script
CWD="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
. "$CWD"/thermostat-ipc-client-common

# Additional JARs necessary for the server
CLASSPATH="${CLASSPATH}:${THERMOSTAT_LIBS}/thermostat-common-core-@project.version@.jar"
CLASSPATH="${CLASSPATH}:${THERMOSTAT_LIBS}/thermostat-shared-config-@project.version@.jar"
CLASSPATH="${CLASSPATH}:${THERMOSTAT_LIBS}/thermostat-agent-command-@project.version@.jar"
CLASSPATH="${CLASSPATH}:${THERMOSTAT_LIBS}/thermostat-common-command-@project.version@.jar"
CLASSPATH="${CLASSPATH}:${THERMOSTAT_LIBS}/thermostat-agent-command-server-@project.version@.jar"
CLASSPATH="${CLASSPATH}:${THERMOSTAT_LIBS}/netty-buffer-@netty.version@.jar"
CLASSPATH="${CLASSPATH}:${THERMOSTAT_LIBS}/netty-common-@netty.version@.jar"
CLASSPATH="${CLASSPATH}:${THERMOSTAT_LIBS}/netty-transport-@netty.version@.jar"
CLASSPATH="${CLASSPATH}:${THERMOSTAT_LIBS}/netty-codec-@netty.version@.jar"
CLASSPATH="${CLASSPATH}:${THERMOSTAT_LIBS}/netty-handler-@netty.version@.jar"
CLASSPATH="${CLASSPATH}:${THERMOSTAT_LIBS}/gson-@gson.version@.jar"
CLASSPATH="${TOOLS_JAR}:${CLASSPATH}"

CMD_CHANNEL_CLASS="com.redhat.thermostat.agent.command.server.internal.CommandChannelServerMain"

# Set this to remote debug
if [ x"$THERMOSTAT_CMDC_DEBUG" != x ] ; then
  DEBUG_OPTS="-Xdebug -Xrunjdwp:transport=dt_socket,server=y,quiet=y,address=1083"
fi

# Determine owner of this file
THIS_SCRIPT="$CWD/thermostat-command-channel"
SCRIPT_OWNER=$(stat -c '%U' "${THIS_SCRIPT}")

# Start server
CONFIG_FILE_ARG="-DipcConfigFile=${CONFIG_FILE}"
# Drop permissions, if root
if [ "$(id -u)" -eq 0 ]; then
  exec /bin/su -s /bin/bash -c "${JAVA} ${CONFIG_FILE_ARG} ${LOGGING_ARGS} -cp ${CLASSPATH} ${DEBUG_OPTS} ${CMD_CHANNEL_CLASS} ${HOSTNAME} ${PORT}" "${SCRIPT_OWNER}" 
else
  exec ${JAVA} "${CONFIG_FILE_ARG}" ${LOGGING_ARGS} -cp ${CLASSPATH} ${DEBUG_OPTS} ${CMD_CHANNEL_CLASS} "${HOSTNAME}" "${PORT}"
fi
